<div class="col-sm-3">
    <div class="card" style="width: 17rem; margin-top: -550px;margin-left: 180px;">
        <div>
            <img class="card-img-top center" style="border: 1px solid gainsboro;margin-left: 35px;max-width:200px;max-height:200px;" src="/images/<%=product.id%>.jpg" alt="Card image cap">
        </div>
        <div class="card-body">
        <h5 class="card-title" style="margin-left: 15px"><%=product.id%> : <%=product.name%></h5>
        <p class="card-text" style="margin-left: 15px">price: <%=product.price%> </p>
        <p class="card-text" style="margin-left: 15px">Information: <%=product.information%> </p>
        <a style="margin-left: 10px;width: 200px;height: 60px;margin-top: -10px;" href="/product/<%=product.id%>" class="btn btn-primary">view details - <%=product.id%></a>
        <button style="margin-left: 30px;margin-top: 10px;" type="submit" class="btn btn-success" onclick="add_to_cart('<%=product.id%>' , '<%=product.name%>','<%=product.price%>')"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
        
        </div>
    </div>
</div>
